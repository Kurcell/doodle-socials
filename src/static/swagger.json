  "paths": {
    "/": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Returns greeting from API.",
        "responses": {
          "200": {
            "description": "OK",
            "content" : {
              "text/plain":{
                "schema":{
                  "type" : "string",
                  "example": "Welcome to Dudol's Social API!"
                }
              }
            }
          }
        }
      }
    },
    "/hello": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Returns greeting from API if the user is logged in.",
        "responses": {
          "200": {
            "description": "OK",
            "content" : {
              "text/plain":{
                "schema":{
                  "type" : "string",
                  "example": "Hello, <Name>!"
